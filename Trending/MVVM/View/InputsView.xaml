<UserControl x:Class="Trending.MVVM.View.InputsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trending.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="{Binding InputCallback.Value}"
                       Margin="0 10"
                       FontSize="32"/>
            <Button Padding="20 5"
                    FontSize="20"
                    Margin="0 10"
                    Command="{Binding StartScanCommand}"
                    Content="Start thread"
                    HorizontalAlignment="Center" />
            <Button Padding="20 5"
                    FontSize="20"
                    Margin="0 10"
                    Command="{Binding EndScanCommand}"
                    Content="EndThread"
                    HorizontalAlignment="Center" />

        </StackPanel>

    </Grid>
</UserControl>
