	<system.serviceModel>
		<services>
			<service name="SCADACore.Implementations.UserService">
				<endpoint address="/User" binding="basicHttpBinding" contract="SCADACore.Interfaces.IUserService" />
			</service>
			<service name="SCADACore.Implementations.DigitalInputService">
				<endpoint address="/DigitalInput" binding="basicHttpBinding" contract="SCADACore.Interfaces.IDigitalInputService" />
				<endpoint address="/DigitalInput-Scan" binding="wsDualHttpBinding" contract="SCADACore.Interfaces.IScanService" />
			</service>
			<service name="SCADACore.Implementations.DigitalOutputService">
				<endpoint address="/DigitalOutput" binding="basicHttpBinding" contract="SCADACore.Interfaces.IDigitalOutputService" />
			</service>
			<service name="SCADACore.Implementations.AnalogInputService">
				<endpoint address="/AnalogInput" binding="basicHttpBinding" contract="SCADACore.Interfaces.IAnalogInputService" />
				<endpoint address="/AnalogInput-Scan" binding="wsDualHttpBinding" contract="SCADACore.Interfaces.IScanService" />
			</service>
			<service name="SCADACore.Implementations.AnalogOutputService">
				<endpoint address="/AnalogOutput" binding="basicHttpBinding" contract="SCADACore.Interfaces.IAnalogOutputService" />
			</service>
			<service name="SCADACore.Implementations.SimDriver">
				<endpoint address="/SimDriver" binding="basicHttpBinding" contract="SCADACore.Interfaces.ISimDriver" />
			</service>
			<service name="SCADACore.Implementations.TagReportService">
				<endpoint address="/SimDriver" binding="basicHttpBinding" contract="SCADACore.Interfaces.ITagReportService" />
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior>
					<!-- To avoid disclosing metadata information, set the values below to false before deployment -->
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<!-- To receive exception details in faults for debugging purposes, set the value below to true.  Set to false before deployment to avoid disclosing exception information -->
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<protocolMapping>
			<add binding="basicHttpsBinding" scheme="https" />
		</protocolMapping>
		<serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
	</system.serviceModel>
	<system.webServer>
		<modules runAllManagedModulesForAllRequests="true" />
		<!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
		<directoryBrowse enabled="true" />
	</system.webServer>
	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>
</configuration>